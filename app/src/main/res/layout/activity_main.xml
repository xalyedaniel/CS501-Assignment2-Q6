<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/workspace"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:lines="2"
        android:maxLines="2"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        style="@style/buttonNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="8dp"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="@id/workspace"
        app:layout_constraintTop_toBottomOf="@id/workspace" />

    <Button
        android:id="@+id/button2"
        style="@style/buttonNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/workspace" />

    <Button
        android:id="@+id/button3"
        style="@style/buttonNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintTop_toBottomOf="@id/workspace"
        app:layout_constraintLeft_toRightOf="@id/button2"/>

    <Button
        android:id="@+id/button4"
        style="@style/buttonOperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintTop_toBottomOf="@id/workspace"
        app:layout_constraintLeft_toRightOf="@id/button3"/>

    <Button
        android:id="@+id/button5"
        style="@style/buttonOperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/workspace"
        app:layout_constraintLeft_toRightOf="@id/button4"
        android:text="*" />

    <Button
        style="@style/buttonNumber"
        android:id="@+id/button6"
        android:text="4"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_contraintRight_toLeftOf="@id/button2"/>
    <Button
        style="@style/buttonNumber"
        android:id="@+id/button7"
        android:text="5"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_contraintLeft_toRightOf="@id/button6"/>
    <Button
        style="@style/buttonNumber"
        android:id="@+id/button8"
        android:text="6"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_contraintLeft_toRightOf="@id/button7"/>
    <Button
        style="@style/buttonOperator"
        android:id="@+id/button9"
        android:text="-"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_contraintLeft_toRightOf="@id/button8"/>
    <Button
        style="@style/buttonOperator"
        android:id="@+id/button10"
        android:text="/"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_contraintLeft_toRightOf="@id/button9"/>


    <Button
        android:id="@+id/button11"
        style="@style/buttonNumber"
        android:text="7"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_contraintRight_toLeftOf="@id/button7"
        />

    <Button
        android:id="@+id/button12"
        style="@style/buttonNumber"
        android:text="8"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_contraintLeft_toRightOf="@id/button11"
        />

    <Button
        android:id="@+id/button13"
        style="@style/buttonNumber"
        android:text="9"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_contraintLeft_toRightOf="@id/button12"
        />

    <Button
        android:id="@+id/button14"
        style="@style/buttonOperator"
        android:layout_weight="2"
        android:text="sqrt"
        app:layout_constraintTop_toBottomOf="@id/button7"
        app:layout_contraintLeft_toRightOf="@id/button13"
         />

    <Button
        style="@style/buttonNumber"
        android:id="@+id/button15"
        android:layout_weight="2"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/button11"
        app:layout_contraintRight_toLeftOf="@id/button11"/>
    <Button
        style="@style/buttonOperator"
        android:id="@+id/button16"
        android:text="."
        app:layout_constraintTop_toBottomOf="@id/button11"
        app:layout_contraintLeft_toRightOf="@id/button15"
        />
    <Button
        style="@style/buttonOperator"
        android:id="@+id/button17"
        android:layout_weight="2"
        android:text="="
        android:onClick="equalsAction"
        app:layout_constraintTop_toBottomOf="@id/button11"
        app:layout_contraintLeft_toRightOf="@id/button16"/>

</androidx.constraintlayout.widget.ConstraintLayout>

